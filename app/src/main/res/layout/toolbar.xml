<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/darkpink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:text="LIST CUSTOMER" />

        <ImageView
            android:id="@+id/dropdownIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_list_24"
            android:contentDescription="Dropdown Icon" />

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/dropdownIcon"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_add_24"
            android:contentDescription="Add Icon" />

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/addIcon"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icons8_delete"
            android:contentDescription="Delete Icon"
            android:maxHeight="24dp"
            android:maxWidth="24dp"/>
    </RelativeLayout>

</RelativeLayout>
