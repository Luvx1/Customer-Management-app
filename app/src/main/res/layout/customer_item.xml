<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Horizontal LinearLayout for Image and Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <!-- Circle Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/customerImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/male"/>

            <!-- Vertical LinearLayout for Name, Age, and Address -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <!-- Name Text -->
                <TextView
                    android:id="@+id/customName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                android:textStyle="bold"
                android:text="Name" />

                <!-- Age Text -->
                <TextView
                    android:id="@+id/customAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="22 year old"
                    android:textSize="20sp" />

                <!-- Address Text -->
                <TextView
                    android:id="@+id/customAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="123 Main Street"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/deleteCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
